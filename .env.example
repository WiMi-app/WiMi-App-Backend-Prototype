# ─── SUPABASE ───────────────────────────────────────────────────────────────
SUPABASE_URL=https://SUPABSE_PROJECT_URL.supabase.co
SUPABASE_KEY=SUPABASE_SERVICE_ROLE_SECRET_KEY

# ─── JWT / AUTH ─────────────────────────────────────────────────────────────
SECRET_KEY=SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=14400

# ─── APP METADATA ────────────────────────────────────────────────────────────
APP_NAME=WiMi
APP_VERSION=0.1.0
ENVIRONMENT=development

# ─── OVERRIDES ───────────────────────────────────────────────────────
# PORT and API_V1_STR have defaults (8000, /api/v0) but you can override:
PORT=8000
API_V1_STR=/api/v0

BACKEND_CORS_ORIGINS="http://localhost,http://localhost:3000"

LOG_LEVEL=INFO

# ─── OPENAI ────────────────────────────────────────
OPENAI_API_KEY=OPENAI_API_KEY